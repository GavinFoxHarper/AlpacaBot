{
  "data_pipeline": {
    "start_date": "2020-01-01",
    "end_date": "2024-12-31",
    "cache_dir": "data/cache",
    "symbols": [
      "SPY",
      "QQQ",
      "AAPL",
      "MSFT",
      "GOOGL",
      "AMZN",
      "NVDA",
      "META",
      "TSLA",
      "JPM",
      "V",
      "JNJ",
      "WMT",
      "PG",
      "UNH",
      "HD",
      "MA",
      "BAC",
      "DIS",
      "ADBE",
      "CRM",
      "NFLX",
      "PFE",
      "TMO",
      "CSCO",
      "PEP",
      "INTC",
      "CMCSA",
      "VZ",
      "T"
    ],
    "validation_split": 0.2,
    "test_split": 0.1,
    "balance_actions": true,
    "target_distribution": {
      "-1": 0.33,
      "0": 0.34,
      "1": 0.33
    },
    "feature_columns": [
      "RSI",
      "MACD",
      "MACD_Signal",
      "MACD_Histogram",
      "BB_Position",
      "ATR",
      "Volume_Ratio",
      "Momentum_5",
      "Momentum_10",
      "Momentum_20",
      "Volatility_20",
      "Volatility_50",
      "SR_Position",
      "Regime_Confidence",
      "Regime_Duration"
    ]
  },
  "reward_system": {
    "action_weights": {
      "buy": {
        "profit_weight": 1.0,
        "timing_weight": 0.3,
        "risk_weight": 0.2
      },
      "sell": {
        "profit_weight": 1.2,
        "timing_weight": 0.4,
        "risk_weight": 0.3
      },
      "hold": {
        "stability_weight": 0.5,
        "opportunity_cost_weight": 0.3
      }
    },
    "regime_multipliers": {
      "bull": {
        "buy": 1.0,
        "sell": 0.8,
        "hold": 0.9
      },
      "bear": {
        "buy": 0.7,
        "sell": 1.3,
        "hold": 1.0
      },
      "crash": {
        "buy": 0.5,
        "sell": 1.5,
        "hold": 1.1
      },
      "recovery": {
        "buy": 1.4,
        "sell": 0.6,
        "hold": 0.8
      },
      "high_volatility": {
        "buy": 0.9,
        "sell": 1.1,
        "hold": 1.2
      },
      "low_volatility": {
        "buy": 1.0,
        "sell": 1.0,
        "hold": 0.8
      },
      "sideways": {
        "buy": 0.8,
        "sell": 0.8,
        "hold": 1.3
      },
      "normal": {
        "buy": 1.0,
        "sell": 1.0,
        "hold": 1.0
      }
    },
    "risk_parameters": {
      "max_drawdown_penalty": 0.5,
      "volatility_threshold": 0.02,
      "confidence_threshold": 0.6,
      "position_size_factor": 0.1
    },
    "consistency_parameters": {
      "streak_bonus_factor": 0.1,
      "min_streak_length": 3,
      "diversity_bonus": 0.05
    }
  },
  "model_architecture": {
    "state_size": 15,
    "hidden_sizes": [
      128,
      64,
      32
    ],
    "dropout_rate": 0.3,
    "attention_dim": 64,
    "num_regimes": 8,
    "use_batch_norm": true,
    "activation": "relu",
    "output_size": 3
  },
  "comprehensive_training": {
    "phases": [
      {
        "name": "foundation_easy",
        "duration_epochs": 50,
        "difficulty_level": "easy",
        "regime_filter": null,
        "action_balance": {
          "0": 0.34,
          "1": 0.33,
          "-1": 0.33
        },
        "learning_rate": 0.001,
        "batch_size": 64,
        "description": "Foundation training with easy patterns"
      },
      {
        "name": "bull_market_specialization",
        "duration_epochs": 30,
        "difficulty_level": "medium",
        "regime_filter": "bull",
        "action_balance": {
          "0": 0.25,
          "1": 0.6,
          "-1": 0.15
        },
        "learning_rate": 0.0008,
        "batch_size": 48,
        "description": "Bull market pattern specialization"
      },
      {
        "name": "bear_market_specialization",
        "duration_epochs": 40,
        "difficulty_level": "medium",
        "regime_filter": "bear",
        "action_balance": {
          "0": 0.25,
          "1": 0.15,
          "-1": 0.6
        },
        "learning_rate": 0.0008,
        "batch_size": 48,
        "description": "Bear market and sell signal specialization"
      },
      {
        "name": "crash_recovery_training",
        "duration_epochs": 35,
        "difficulty_level": "hard",
        "regime_filter": "crash",
        "action_balance": {
          "0": 0.2,
          "1": 0.2,
          "-1": 0.6
        },
        "learning_rate": 0.0006,
        "batch_size": 32,
        "description": "Extreme market conditions training"
      },
      {
        "name": "balanced_integration",
        "duration_epochs": 40,
        "difficulty_level": "medium",
        "regime_filter": null,
        "action_balance": {
          "0": 0.34,
          "1": 0.33,
          "-1": 0.33
        },
        "learning_rate": 0.0005,
        "batch_size": 64,
        "description": "Balanced integration of all patterns"
      },
      {
        "name": "adversarial_hardening",
        "duration_epochs": 25,
        "difficulty_level": "extreme",
        "regime_filter": null,
        "action_balance": {
          "0": 0.3,
          "1": 0.35,
          "-1": 0.35
        },
        "learning_rate": 0.0003,
        "batch_size": 32,
        "description": "Final hardening with extreme conditions"
      }
    ],
    "early_stopping": {
      "patience": 10,
      "min_delta": 0.001,
      "monitor_metric": "accuracy"
    },
    "checkpoint_every": 5,
    "save_dir": "models/checkpoints",
    "max_epochs": 200,
    "validation_frequency": 1
  },
  "experience_buffer": {
    "max_size": 100000,
    "alpha": 0.6,
    "beta": 0.4,
    "beta_increment": 0.001,
    "epsilon": 1e-06,
    "regime_specific": true,
    "regime_buffer_sizes": {
      "bull": 25000,
      "bear": 25000,
      "sideways": 25000,
      "crash": 12500,
      "recovery": 12500,
      "high_volatility": 12500,
      "low_volatility": 12500,
      "normal": 25000
    },
    "action_priority_boosts": {
      "-1": 3.0,
      "1": 2.0,
      "0": 1.5
    },
    "regime_priority_boosts": {
      "crash": 3.0,
      "recovery": 2.5,
      "bear": 2.0,
      "high_volatility": 1.8,
      "bull": 1.0,
      "sideways": 1.2,
      "low_volatility": 1.1,
      "normal": 1.0
    }
  },
  "validation": {
    "n_splits": 5,
    "test_size": 0.2,
    "gap_days": 5,
    "min_train_size": 252,
    "stress_test_enabled": true,
    "regime_stratified": true,
    "performance_metrics": [
      "accuracy",
      "precision",
      "recall",
      "f1",
      "sharpe_ratio",
      "max_drawdown",
      "total_return",
      "win_rate",
      "profit_factor",
      "calmar_ratio",
      "balance_score"
    ],
    "stress_test_scenarios": [
      "market_crash",
      "high_volatility",
      "sideways_market",
      "regime_transition",
      "low_confidence"
    ],
    "benchmark_models": [
      "random",
      "majority_class",
      "buy_and_hold"
    ]
  },
  "adaptive_agent": {
    "learning_rate": 0.001,
    "gamma": 0.99,
    "epsilon_start": 1.0,
    "epsilon_end": 0.01,
    "epsilon_decay": 10000,
    "target_update_frequency": 100,
    "device": "cuda",
    "specialist_configs": {
      "bull": {
        "confidence_threshold": 0.6,
        "risk_tolerance": 0.8
      },
      "bear": {
        "confidence_threshold": 0.7,
        "risk_tolerance": 0.3
      },
      "crash": {
        "confidence_threshold": 0.8,
        "risk_tolerance": 0.1
      },
      "recovery": {
        "confidence_threshold": 0.65,
        "risk_tolerance": 0.7
      },
      "high_volatility": {
        "confidence_threshold": 0.75,
        "risk_tolerance": 0.2
      },
      "low_volatility": {
        "confidence_threshold": 0.55,
        "risk_tolerance": 0.9
      },
      "sideways": {
        "confidence_threshold": 0.6,
        "risk_tolerance": 0.5
      },
      "normal": {
        "confidence_threshold": 0.6,
        "risk_tolerance": 0.6
      }
    }
  },
  "random_seed": 42,
  "logging_level": "INFO",
  "output_dir": "training_outputs",
  "experiment_name": "alpacabot_training_fix",
  "save_intermediate_results": true,
  "create_visualizations": true,
  "use_gpu": true,
  "num_workers": 4,
  "memory_limit_gb": 16,
  "target_accuracy": 0.65,
  "target_sharpe_ratio": 1.0,
  "target_max_drawdown": -0.15,
  "target_balance_score": 0.8,
  "min_sell_signal_ratio": 0.25
}